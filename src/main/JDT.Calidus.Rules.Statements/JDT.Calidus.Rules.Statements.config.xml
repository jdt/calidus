<?xml version="1.0" encoding="utf-8" ?>
<rules>
  <rule type="JDT.Calidus.Rules.Statements.Declaration.MemberNameMatchesPatternRule, JDT.Calidus.Rules.Statements">
    <description>
      This rule validates that member statement declarations match a given pattern
    </description>
    <params>
      <param name="pattern" type="String">_[a-z0-9]</param>
      <param name="ignorePublicStatic" type="Boolean">true</param>
    </params>
  </rule>
  <rule type="JDT.Calidus.Rules.Statements.Declaration.ExplicitAccessModifierDeclaredRule, JDT.Calidus.Rules.Statements">
    <description>
      This rule validates that all elements that can have access modifiers declared have explicit access modifiers declared
    </description>
    <params>
    </params>
  </rule>
</rules>